expr {=
from fir.controls.utils import cls, firScopeOptsEnc;
from mkk.Tourist.PlainList import TouristPlainList;
from fir.controls.Pagination import Pagination;
def TouristNavigatedList {=
	def.kv
		moduleName: 'mkk/Tourist/NavigatedList/NavigatedList'
		instanceName: 'touristNavigatedList'
		cssBaseClass: 'mkk-TouristNavigatedList'
		touristList: null
		nav: null
		itemTextTag: 'div'
		itemIcon: null
		mode: null;
	def.body {*
	<div class="{=cls 'block'}" data-fir-module="{{moduleName}}">
			<input type="hidden" data-fir-opts="{=firScopeOptsEnc
				fields: ['touristList', 'nav', 'mode']
			}"/>
		<div class="{=cls 'navBar'}">
			{=Pagination
				instanceName: instanceName ~ 'Paging'
				offset: nav.offset
				pageSize: nav.pageSize
				recordCount: nav.recordCount
			}
		</div>
		{=TouristPlainList
			instanceName: instanceName ~ 'View'
			touristList: touristList
			nav: nav
			itemTextTag: itemTextTag
			itemIcon: itemIcon
			mode: mode
		}
	</div>
	*}
}
}
