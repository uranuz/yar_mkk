{
	"services": {
		"yarMKKMain": {
			"URI": "//localhost/",
			"endpoints": {
				"default": "http://localhost/jsonrpc/"
			},
			"databases": {
				"commonDB": {
					"host": "127.0.0.1",
					"port": 5432,
					"dbname": "baza_MKK",
					"user": "postgres",
					"password": "postgres"
				},
				"authDB": {
					"host": "127.0.0.1",
					"port": 5432,
					"dbname": "MKK_site_base",
					"user": "postgres",
					"password": "postgres"
				}
			},
			"fileSystemPaths": {
				"siteRoot": "~/sites/mkk_site/",
				"siteLogs": "logs/"
			},
			"virtualPaths": {
				"siteRoot": "/",
				"siteJSON_RPC": "jsonrpc/"
			}
		},
		"yarMKKView": {
			"virtualPaths": {
				"siteRoot": "/",
				"siteJSON_RPC": "jsonrpc/",
				"siteDynamic": "dyn/",
				"sitePublic": "pub/",
				"siteImg": "pub/mkk/img/",

				"siteAuthPage": "dyn/auth",

				"bootstrapPublic": "pub/bootstrap/",
				"bootstrapCSS": "pub/bootstrap/css/",
				"bootstrapJS": "pub/bootstrap/js/",
				"bootstrapImg": "pub/bootstrap/img/"
			},
			"fileSystemPaths": {
				"siteRoot": "~/sites/mkk_site/",
				"siteLogs": "logs/",
				"sitePublic": "pub/",

				"siteIvyTemplates": "res/templates/"
			}
		},
		"yarMKKHistory": {
			"URI": "//localhost/",
			"endpoints": {
				"default": "http://localhost/history/jsonrpc/"
			},
			"virtualPaths": {
				"siteRoot": "/",
				"siteJSON_RPC": "history/jsonrpc/"
			},
			"fileSystemPaths": {
				"siteRoot": "~/sites/mkk_site/",
				"siteLogs": "logs/",
				"siteEventLogFile": "logs/history_event.log",
				"siteErrorLogFile": "logs/history_error.log",
				"siteDatabaseLogFile": "logs/history_database.log"
			},
			"databases": {
				"historyDB": {
					"host": "127.0.0.1",
					"port": 5432,
					"dbname": "mkk_history",
					"user": "postgres",
					"password": "postgres"
				}
			}
		}
	}
}
